{
  "version": 2,
  "buildCommand": "cd function && npm install && npm run build",
  "public": "frontend/public",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ],
  "env": [
    "OPENAI_API_KEY",
    "GEMINI_API_KEY",
    "NODE_ENV"
  ],
  "ignore": [
    "firebase.json",
    ".firebaserc",
    "firestore.rules",
    "storage.rules",
    "function/server.js",
    ".env"
  ]
}